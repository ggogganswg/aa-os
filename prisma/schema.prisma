generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String       @id @default(cuid())
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  modelSets ModelSet[]
  sessions  Session[]
  context   UserContext?

  identityVersions IdentityModelVersion[]
  confidenceStates ConfidenceState[]


}

model Session {
  id        String       @id @default(cuid())
  userId    String
  type      SessionType
  phase     SessionPhase
  state     SystemState
  purpose   String?
  openedAt  DateTime     @default(now())
  closedAt  DateTime?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  modelSets ModelSet[]
  user      User         @relation(fields: [userId], references: [id])

  @@index([userId, openedAt])
}

model UserContext {
  id                  String   @id @default(cuid())
  userId              String   @unique
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  lastClosedSessionId String?
  activeModelSetId    String?
  contextVersion      Int      @default(1)
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([activeModelSetId])
  @@index([lastClosedSessionId])
}

model AuditEvent {
  id        String   @id @default(cuid())
  userId    String?
  sessionId String?
  eventType String
  meta      Json?
  createdAt DateTime @default(now())

  @@index([userId, createdAt])
  @@index([sessionId, createdAt])
}

model ControlFlag {
  id        String   @id @default(cuid())
  scope     String
  scopeId   String?
  paused    Boolean  @default(false)
  reason    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([scope, scopeId])
}

model ModelSet {
  id        String   @id @default(cuid())
  userId    String
  sessionId String?
  status    String   @default("DRAFT")
  createdAt DateTime @default(now())
  session   Session? @relation(fields: [sessionId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  identityVersions IdentityModelVersion[]

  @@index([userId])
  @@index([sessionId])
}

model IdentityModelVersion {
  id         String             @id @default(cuid())

  userId     String
  modelSetId String

  type       IdentityModelType
  version    Int

  // Structure-only payload. No raw transcripts. No coaching output.
  payload    Json

  status     IdentityModelStatus @default(DRAFT)

  createdAt  DateTime           @default(now())

  // Relations
  user       User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  modelSet   ModelSet           @relation(fields: [modelSetId], references: [id], onDelete: Cascade)

  @@unique([modelSetId, type, version])
  @@index([userId, createdAt])
  @@index([modelSetId, type, createdAt])
}

model ConfidenceState {
  id         String           @id @default(cuid())

  userId     String
  domain     ConfidenceDomain

  // The thing weâ€™re tracking confidence about (e.g., "CIM.structure", "FIM.structure", "session.type")
  key        String

  // 0.0 to 1.0 (service enforces bounds)
  value      Float

  // Why we set it (no raw user content; structure-only)
  reason     String?

  // Optional links (structure-only)
  modelSetId String?
  sessionId  String?

  createdAt  DateTime         @default(now())

  user       User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, domain, key, createdAt])
  @@index([modelSetId, createdAt])
  @@index([sessionId, createdAt])
}

enum SystemState {
  UNINITIALIZED
  ASSESSING
  MODELED
  INSIGHT_DELIVERY
  LONGITUDINAL_TRACKING
  PAUSED
}

enum SessionType {
  ASSESSMENT
  INSIGHT
  CHECK_IN
  STABILIZATION
}

enum SessionPhase {
  OPENING
  ENGAGEMENT
  SYNTHESIS
  CLOSURE
}

enum IdentityModelType {
  CIM
  FIM
}

enum IdentityModelStatus {
  DRAFT
  ACTIVE
  ARCHIVED
}

enum ConfidenceDomain {
  IDENTITY_MODEL
  SESSION
  SYSTEM
}


